# Comando clear

	clear // Limpa o terminal


# Comando cat

	cat exibe o conteudo de arquivos

		flavio@flavio-Notebook-PC:~$ cat teste
		Este é o curso de Linux para devs, feito pelo hora de codar

	cat teste teste2 // é possivel mostrar o conteudo de arquivos simultaneos

		flavio@flavio-Notebook-PC:~$ cat teste teste2
		Este é o curso de Linux para devs, feito pelo hora de codar
		este é o segundo arquivo


	cat teste teste2 > teste3 // é possivel criar um arquivo juntando o conteudo de outros arquivos

		flavio@flavio-Notebook-PC:~$ cat teste teste2 > teste3
		
		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   Downloads   Modelos   Público   teste    teste3
		 Documentos          Imagens     Músicas   snap      teste2   Vídeos
		
		flavio@flavio-Notebook-PC:~$ cat teste3
		Este é o curso de Linux para devs, feito pelo hora de codar
		este é o segundo arquivo

	cat teste -n teste3 // Mostra numero de linhas no conteudi

		flavio@flavio-Notebook-PC:~$ cat -n teste3
	     1	Este é o curso de Linux para devs, 
	     2	
	     3	feito pelo hora de codar
	     4	este é o segundo arquivo
		flavio@flavio-Notebook-PC:~$

	cat -e teste3 // Delimita  com o $ o final de cada linha no arquivo

		flavio@flavio-Notebook-PC:~$ cat -e teste3
		Este M-CM-) o curso de Linux para devs, $
		$
		feito pelo hora de codar$
		este M-CM-) o segundo arquivo$
		flavio@flavio-Notebook-PC:~$

	cat teste4 >> teste3 // adiciona o conteudo de teste4 ao final de teste 3 sem alterar nenhum conteudo existente

		flavio@flavio-Notebook-PC:~$ cat teste4 >> teste3
		flavio@flavio-Notebook-PC:~$ cat teste3
		Este é o curso de Linux para devs, 

		feito pelo hora de codar
		este é o segundo arquivo
		este agora é o teste4


# Comando touch

	touch <nome_do_aquivo> // cria um novo arquivo, também altera a data de alteração de um aquivo

		// crando arquivo, é possivel criar varios arquivos com um comando apenas ex: touch a.txt b.txt c.txt
		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   Downloads   Modelos   Público   teste    teste3   Vídeos
		 Documentos          Imagens     Músicas   snap      teste2   teste4
		
		flavio@flavio-Notebook-PC:~$ touch teste5
		
		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   Downloads   Modelos   Público   teste    teste3   teste5
		 Documentos          Imagens     Músicas   snap      teste2   teste4   Vídeos
		flavio@flavio-Notebook-PC:~$

		// atualizando data de alteração do arquivo
		##flavio@flavio-Notebook-PC:~$ ls -ltr
		total 52
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Vídeos
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Público
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Músicas
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Modelos
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Imagens
		drwxr-xr-x 4 flavio flavio 4096 set 15 17:17  Documentos
		drwxr-xr-x 2 flavio flavio 4096 set 15 17:17 'Área de trabalho'
		drwx------ 7 flavio flavio 4096 set 15 18:00  snap
		drwxr-xr-x 2 flavio flavio 4096 set 16 10:39  Downloads
		##-rw-rw-r-- 1 flavio flavio   61 set 16 11:10  teste
		-rw-rw-r-- 1 flavio flavio   25 set 16 11:13  teste2
		-rw-rw-r-- 1 flavio flavio   22 set 16 11:31  teste4
		-rw-rw-r-- 1 flavio flavio  111 set 16 11:33  teste3
		
		##flavio@flavio-Notebook-PC:~$ touch  teste
		
		##flavio@flavio-Notebook-PC:~$ ls -ltr
		total 52
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Vídeos
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Público
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Músicas
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Modelos
		drwxr-xr-x 2 flavio flavio 4096 set 15 15:35  Imagens
		drwxr-xr-x 4 flavio flavio 4096 set 15 17:17  Documentos
		drwxr-xr-x 2 flavio flavio 4096 set 15 17:17 'Área de trabalho'
		drwx------ 7 flavio flavio 4096 set 15 18:00  snap
		drwxr-xr-x 2 flavio flavio 4096 set 16 10:39  Downloads
		-rw-rw-r-- 1 flavio flavio   25 set 16 11:13  teste2
		-rw-rw-r-- 1 flavio flavio   22 set 16 11:31  teste4
		-rw-rw-r-- 1 flavio flavio  111 set 16 11:33  teste3
		##-rw-rw-r-- 1 flavio flavio   61 set 16 11:37  teste
		flavio@flavio-Notebook-PC:~$ 


# Comando man

	man mostra o manual completo e detalhado do comando e seus parametros ex: man ls


# ctrl+r ajuda a encontrar comando filtrando parte do nome do comando


# Gerenciar aquivos em diretórios

# comando mkdir
	//cria diretorios
	flavio@flavio-Notebook-PC:~$ mkdir dir1
	
	flavio@flavio-Notebook-PC:~$ ls
	'Área de trabalho'   Downloads   Músicas   teste    teste4
	 dir1                Imagens     Público   teste2   teste5
	 Documentos          Modelos     snap      teste3   Vídeos
	
	//é possivel criar vairos diretorios com apenas um comanando
	flavio@flavio-Notebook-PC:~$ mkdir dir2 dir3 dir4
	
	flavio@flavio-Notebook-PC:~$ ls
	'Área de trabalho'   dir3         Downloads   Músicas   teste    teste4
	 dir1                dir4         Imagens     Público   teste2   teste5
	 dir2                Documentos   Modelos     snap      teste3   Vídeos
	
	//É possivel realizar a criação de varios diretorios em cadeia
	flavio@flavio-Notebook-PC:~$ mkdir -p dir4/dir1/dir5
	flavio@flavio-Notebook-PC:~$ ls dir4
	dir1
	flavio@flavio-Notebook-PC:~$ ls dir4/dir1
	dir5
	flavio@flavio-Notebook-PC:~$ 

	//é possivel deixa mais explicito todo o processo no terminal
	flavio@flavio-Notebook-PC:~$ mkdir -v dir5 dir6
	mkdir: foi criado o diretório 'dir5'
	mkdir: foi criado o diretório 'dir6'

	//é possilvel criar um diretório dentro de outro diretório
	flavio@flavio-Notebook-PC:~$ mkdir dir6/dir1

	//para criar estruturas de diretórios mais complexas usamo o mkdir -p
	flavio@flavio-Notebook-PC:~$ mkdir dir6/dir1/dir7/dir5
	mkdir: não foi possível criar o diretório “dir6/dir1/dir7/dir5”: Arquivo ou diretório inexistente
	
	flavio@flavio-Notebook-PC:~$ mkdir -p dir6/dir1/dir7/dir5

	//também é possivel criar diretorios em pastas de nivel acima
	mkdir ../dir10 vai criar o diretório na pasta anterio a que esta localizado


# Removendo Arquivos ou diretorios

	rm // remove arquivos e diretorios,é possivel remover varios arquivos com apenas um comando
	rm -i //realiza remoção com uma pergunta y ou n

		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   dir3   dir6         Imagens   Público   teste2   teste5
		 dir1                dir4   Documentos   Modelos   snap      teste3   Vídeos
		 dir2                dir5   Downloads    Músicas   teste     teste4

		flavio@flavio-Notebook-PC:~$ rm teste

		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   dir3   dir6         Imagens   Público   teste3   Vídeos
		 dir1                dir4   Documentos   Modelos   snap      teste4
		 dir2                dir5   Downloads    Músicas   teste2    teste5
		flavio@flavio-Notebook-PC:~$ 

	rm -dv //remove diretórios vazios

		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   dir3   dir6         Imagens   Público   teste3   Vídeos
		 dir1                dir4   Documentos   Modelos   snap      teste4
		 dir2                dir5   Downloads    Músicas   teste2    teste5
		
		flavio@flavio-Notebook-PC:~$ rm dir1
		rm: não foi possível remover 'dir1': É um diretório
		
		flavio@flavio-Notebook-PC:~$ rm -dv dir1
		foi removido o diretório: 'dir1'
		
		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   dir4   Documentos   Modelos   snap     teste4
		 dir2                dir5   Downloads    Músicas   teste2   teste5
		 dir3                dir6   Imagens      Público   teste3   Vídeos
	
	rm -rfv //Remove diretŕio com arquivos

		flavio@flavio-Notebook-PC:~$ ls dir6
		dir1
		flavio@flavio-Notebook-PC:~$ rm  -rfv dir6
		foi removido o diretório: 'dir6/dir1/dir7/dir5'
		foi removido o diretório: 'dir6/dir1/dir7'
		foi removido o diretório: 'dir6/dir1'
		foi removido o diretório: 'dir6'
		flavio@flavio-Notebook-PC:~$


# comando rmdir remove apenas diretórios
	
	flavio@flavio-Notebook-PC:~$ ls
	'Área de trabalho'   dir5         Imagens   Público   teste3   Vídeos
	 dir3                Documentos   Modelos   snap      teste4
	 dir4                Downloads    Músicas   teste2    teste5
	
	flavio@flavio-Notebook-PC:~$ rmdir dir3
	
	flavio@flavio-Notebook-PC:~$ ls
	'Área de trabalho'   Documentos   Modelos   snap     teste4
	 dir4                Downloads    Músicas   teste2   teste5
	 dir5                Imagens      Público   teste3   Vídeos

	rmdir -p //Remove diretórios em cadeia

	flavio@flavio-Notebook-PC:~$ ls
	'Área de trabalho'   Documentos   Modelos   snap     teste4
	 dir4                Downloads    Músicas   teste2   teste5
	 dir5                Imagens      Público   teste3   Vídeos

	flavio@flavio-Notebook-PC:~$ rmdir -p dir4/dir1/dir5
	
	flavio@flavio-Notebook-PC:~$ ls dir4
	ls: não foi possível acessar 'dir4': Arquivo ou diretório inexistente
	
	flavio@flavio-Notebook-PC:~$ ls
	'Área de trabalho'   Documentos   Imagens   Músicas   snap     teste3   teste5
	 dir5                Downloads    Modelos   Público   teste2   teste4   Vídeos


# Comando cp
	
	cp copia diretorios e arquivos

		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   Documentos   Imagens   Músicas          Público   Vídeos
		 doc_original.txt    Downloads    Modelos   pasta_de_teste   snap
		
		flavio@flavio-Notebook-PC:~$ cp doc_original.txt doc_copia.txt
		
		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   Documentos   Modelos          Público
		 doc_copia.txt       Downloads    Músicas          snap
		 doc_original.txt    Imagens      pasta_de_teste   Vídeos
		flavio@flavio-Notebook-PC:~$ 

	//É possivel copiar arquivos para dentro de diretórios
			
		flavio@flavio-Notebook-PC:~$ cp doc_copia.txt pasta_de_teste
		
		flavio@flavio-Notebook-PC:~$ ls pasta_de_teste/
		doc_copia.txt

	//É possivel copiar varios arquivos para uma pasta com apenas um comando
		
		flavio@flavio-Notebook-PC:~$ ls
		'Área de trabalho'   Documentos   Modelos          Público      teste2.txt
		 doc_copia.txt       Downloads    Músicas          snap         Vídeos
		 doc_original.txt    Imagens      pasta_de_teste   teste1.txt
		
		flavio@flavio-Notebook-PC:~$ ls pasta_de_teste/
		doc_copia.txt
		
